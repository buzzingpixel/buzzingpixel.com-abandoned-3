.TitleArea {
    border-bottom: 2px solid var(--LightGray);
    text-align: center;
}

.TitleArea__Inner {
    padding: 14px;
}

.TitleArea__Title {
    color: var(--Nandor);
    font-size: 36px;
    margin-bottom: 0;
}

.TitleArea__Small {
    display: block;
    font-size: 20px;
    font-family: var(--PrimaryFont);
    font-weight: var(--PrimaryFontThinWeight);
}

.TitleArea__ActionButton {
    margin: 10px;
}
